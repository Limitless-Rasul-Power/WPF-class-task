    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        
            
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>

            
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Name="TxtBlckFirst" Grid.Column="0" Background="Aqua" ToolTip="Path of file"></TextBlock>
                <Button Cursor="Hand" Name="BtnOpen" Grid.Column="1" Background="DeepPink" FontSize="20" Click="BtnOpen_Click">Open</Button>
                
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">
                
                <Button Name="BtnSave" Cursor="Hand" Background="SpringGreen" FontSize="20" Click="BtnSave_Click">
                    Save
                </Button>
                
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">

                <ToggleButton FontSize="15">
                    Toggle
                </ToggleButton>
                
            </Grid>

            <Grid Grid.Row="0" Grid.Column="3">
                <ToolBar>
                    <Button FontSize="20" Background="OrangeRed" Command="ApplicationCommands.Cut">
                        Cut
                    </Button>
                </ToolBar>
                
            </Grid>

            <Grid Grid.Row="0" Grid.Column="4">
                <ToolBar>
                    <Button FontSize="20" Background="DeepSkyBlue" Command="ApplicationCommands.Copy">
                        Copy
                    </Button>
                </ToolBar>
                
            </Grid>

            <Grid Grid.Row="0" Grid.Column="5">
                <ToolBar>
                    <Button FontSize="20" Background="RosyBrown" Command="ApplicationCommands.Paste">
                        Paste
                    </Button>
                </ToolBar>
               
            </Grid>

            <Grid Grid.Row="0" Grid.Column="6">
                <Button FontSize="20" Background="Green">
                    Select all
                </Button>
            </Grid>

        </Grid>
        

        <Grid Grid.Row="1">

            <TextBox Name="TxtBxData" FontSize="20"></TextBox>
              
        </Grid>
        
    </Grid>



</Window>
